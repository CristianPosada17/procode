<section class="bg-[#184074] text-white py-8" id="contact">
  <div class="container mx-auto text-center px-5">
    <h2 class="text-3xl font-bold mb-4">Contáctanos</h2>
    <p class="mb-6">
      Estamos aquí para ayudarte. Completa el formulario y nos pondremos en
      contacto contigo.
    </p>

    <form
      action="https://formspree.io/f/xwpeejzo"
      method="POST"
      class="bg-white text-gray-800 rounded-lg shadow-lg p-6
      max-w-4xl mx-auto"
    >
      <!-- Nombre y Apellidos -->
      <div class="mb-4">
        <label for="name" class="block text-sm font-bold mb-2 text-[#184074]">
          Nombre y Apellidos
        </label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#184074]"
          placeholder="Ingresa tu nombre completo"
          required
        />
      </div>

      <!-- Número Celular -->
      <div class="mb-4">
        <label for="phone" class="block text-sm font-bold mb-2 text-[#184074]">
          Número Celular
        </label>
        <input
          type="tel"
          id="phone"
          name="phone"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#184074]"
          placeholder="Ingresa tu número celular"
          required
        />
      </div>

      <!-- Email -->
      <div class="mb-4">
        <label for="email" class="block text-sm font-bold mb-2 text-[#184074]">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#184074]"
          placeholder="Ingresa tu correo electrónico"
          required
        />
      </div>

      <!-- ¿Tiene una página web? -->
      <div class="mb-4">
        <label class="block text-sm font-bold mb-2 text-[#184074]">
          ¿Actualmente tienes una página web?
        </label>
        <div class="flex justify-start items-center space-x-6">
          <label class="flex items-center">
            <input
              type="radio"
              name="hasWebsite"
              value="yes"
              class="mr-2"
              required
            />
            Sí
          </label>
          <label class="flex items-center">
            <input
              type="radio"
              name="hasWebsite"
              value="no"
              class="mr-2"
              required
            />
            No
          </label>
        </div>
      </div>

      <!-- ¿Cuenta con hosting y dominio? -->
      <div class="mb-4">
        <label class="block text-sm font-bold mb-2 text-[#184074]">
          ¿Cuentas con hosting y dominio?
        </label>
        <div class="flex justify-start items-center space-x-6">
          <label class="flex items-center">
            <input
              type="radio"
              name="hasHosting"
              value="yes"
              class="mr-2"
              required
            />
            Sí
          </label>
          <label class="flex items-center">
            <input
              type="radio"
              name="hasHosting"
              value="no"
              class="mr-2"
              required
            />
            No
          </label>
        </div>
      </div>

      <!-- Comentarios adicionales -->
      <div class="mb-4">
        <label
          for="comments"
          class="block text-sm font-bold mb-2 text-[#184074]"
        >
          ¿Algo más que desees agregar? (Opcional)
        </label>
        <textarea
          id="comments"
          name="comments"
          rows="4"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#184074]"
          placeholder="Escribe aquí tus comentarios o preguntas"></textarea>
      </div>

      <!-- Botón de Enviar -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-[#184074] text-white px-6 py-2 rounded-lg hover:bg-gray-500 transition duration-200 ease-in-out"
        >
          Enviar
        </button>
      </div>
    </form>
  </div>
</section>
